<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context="MainActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="120dp"
        android:layout_height="110dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/logo"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_marginTop="170dp"
        android:id="@+id/firstname"
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:background="#11000000"
        android:textColor="#fff"
        android:drawableStart="@drawable/ic_action_user"
        android:hint="First Name"
        android:textColorHint="#fff"
        android:inputType="textPersonName"
        android:textSize="16dp"
        android:layout_marginBottom="25dp"
        android:layout_centerHorizontal="true"
        android:autofillHints="" />

    <EditText
        android:id="@+id/Lastname"
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:background="#11000000"
        android:textColor="#fff"
        android:layout_below="@id/firstname"
        android:drawableLeft="@drawable/ic_action_user"
        android:hint="Last Name"
        android:textColorHint="#fff"
        android:inputType="textPersonName"
        android:layout_marginBottom="25dp"
        android:layout_centerHorizontal="true"
        android:autofillHints="" />


    <EditText
        android:id="@+id/Phoneno"
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:background="#11000000"
        android:textColor="#fff"
        android:layout_below="@id/Lastname"
        android:drawableLeft="@drawable/ic_action_user"
        android:hint="Phone Number"
        android:textColorHint="#fff"
        android:inputType="number"
        android:layout_marginBottom="25dp"
        android:layout_centerHorizontal="true"
        android:autofillHints="" />


    <EditText
        android:id="@+id/emailreg"
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:background="#11000000"
        android:textColor="#fff"
        android:layout_below="@id/Phoneno"
        android:drawableLeft="@drawable/ic_action_user"
        android:hint="E-mail"
        android:textColorHint="#fff"
        android:inputType="text"
        android:layout_marginBottom="25dp"
        android:layout_centerHorizontal="true"
        android:autofillHints="" />


    <EditText
        android:id="@+id/passwordreg"
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:background="#11000000"
        android:textColor="#fff"
        android:layout_below="@id/emailreg"
        android:drawableLeft="@drawable/ic_action_user"
        android:hint="Password"
        android:textColorHint="#fff"
        android:inputType="textPassword"
        android:layout_marginBottom="25dp"
        android:layout_centerHorizontal="true"
        android:autofillHints="" />




    <Button
        android:id="@+id/btnregister"
        android:layout_marginBottom="30dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_below="@+id/passwordreg"
        android:background="@drawable/shape_button"
        android:text="@string/register"
        android:textColor="#ffffff" />


    <TextView
        android:id="@+id/backlogin"
        android:textSize="17dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back to Login"
        android:textAllCaps="true"
        android:layout_below="@+id/btnregister"
        android:textColor="#fff"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textAlignment="center"
        android:layout_marginBottom="45dp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
         />


    <TextView
        android:id="@+id/textView2"
        android:textSize="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="By clicking REGISTER you will agree our Terms of Service and Privacy Policy."
        android:layout_below="@+id/backlogin"
        android:textColor="#fa3e74"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
         />






</RelativeLayout>

